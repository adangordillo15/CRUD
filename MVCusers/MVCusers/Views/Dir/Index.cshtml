@model IEnumerable<MVCusers.Models.Direccion>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Crear Direccion</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id_direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.calle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.colonia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.delegacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.codigopostal)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.colonia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.delegacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigopostal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_direccion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_direccion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_direccion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
